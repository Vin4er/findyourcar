.block-1
	height 100vh
	min-height: 610px
	.wrap
		padding-bottom: 20px
	.info-control
		@media (max-width: 500px)
			display: none
		display: block;
		font-size: 18px;
		line-height: 1;
		color: #b5b5b5;
		text-align: center;
		margin: auto;
		width: 150px;
		position: absolute;
		bottom: 25px;
		left: 50%;
		margin-left: -75px;
		span
			opacity: 0.3;
			display block
			padding-bottom: 15px
		img
			width: 24px;
			height: 42px;
			display block
			margin: auto
	.btn
		width: 300px
		display: block
		margin: auto
	p
		font-size: 24px
		line-height: 1.3;
		color: #b5b5b5;
		max-width: 700px
