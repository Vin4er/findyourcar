@import  "./layout/inputs.styl"

.wrap
	min-width 300px
	max-width 1480px
	padding-left: 20px;
	padding-right: 20px;
	width 100%
	position relative
	margin: auto
header
	position: fixed
	overflow hidden
	width: 100%
	left: 0
	top: 0
	display: none
	z-index: 4

.block-1,
.block-2,
.block-3,
.block-4,
