*, :after, :before
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
	margin: 0
	padding 0
	box-sizing: border-box
	letter-spacing 0px
	outline 0
	box-sizing border-box
	letter-spacing 0px
	font-family: 'PT Sans', sans-serif;


@import  "./layout/inputs.styl"

.wrap
	min-width 300px
	max-width 1024px
	padding-left: 20px;
	padding-right: 20px;
	width 100%
	position relative
	margin: auto


.block-5
	background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), #000000);
	padding-top: 80px
	padding-bottom: 120px
	white-space: nowrap 
	.wrap
		position: relative
	&-text
		display: inline-block
		vertical-align: top
		width: 60%
		white-space: normal
		line-height: 1.3
		color: #b5b5b5;
	&-price
		margin-top: -160px
		white-space: normal
		display: inline-block
		vertical-align: top
		width: 40%
		text-align: center
		&-big
			font-size: 144px;
			line-height: 1.0;
			color: #ffffff;
			font-weight: bold
		&-text
			padding-top: 14px
			text-align: center
			font-size: 24px;
			line-height: 1.0;
			color: #b5b5b5;
		&-btn
			padding-top: 24px
			.btn
				margin: auto
				width: 300px
	.h1
		text-align: left
		padding-right: 4%
		white-space: normal
		&-line
			&:after
				width: 220px



.block-6
	background: white
	padding-top: 60px
	padding-bottom: 70px
	&-title
		text-align: left
		max-width: 60%
	&-btn
		padding-top: 40px
		width: 300px
	&-text
		text-align: left
		max-width: 60%
		p
			font-size: 24px
			line-height: 1.3
			color: #b5b5b5
			margin-bottom: 40px




.block-8
	padding-top: 150px
	background-image: linear-gradient(to top, rgba(0, 0, 0, 0.8), #000000);
	position: relative
	.h1
		padding-bottom: 30px
	&-btns
		width: 300px
		margin: auto
		text-align center
		a
			margin-bottom: 30px
		.link
			font-size: 11px;
			margin-top 100px
			margin-bottom 30px