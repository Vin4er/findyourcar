html
	body
		.white
			color: white
		.italic
			font-style: italic
		.ib
			display: inline-block
.table
	disaplay: table
	table-layout: fixed
.row
	disaplay: table-row
.cell
	disaplay: table-cell
	vertical-align: center

.w100
	width: 100%
.w25
	width: 25%
.w20
	width: 20%

.btn
	height: 38px
	line-height: 38px
	vertical-align: middle
	font-size: 14px
	font-weight: bold
	color: white
	text-align center
	display: block
	text-decoration: none
	border: 0
	&-red
		background-color: #fd072c
	&-blue
		background-color: #5b7fa6;

.h1
	text-align center
	font-size: 48px;
	line-height: 1.0;
	color: #252525;
	&-line
		&:after
			margin-top: 60px
			margin-bottom 60px
			content: ""
			width: 138px;
			height: 6px;
			display: block
			border: solid 7px #fd072c;