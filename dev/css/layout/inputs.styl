html
	body
		.white
			color: white
		.italic
			font-style: italic
		.ib
			display: inline-block
.table
	display: table
	table-layout: fixed
.row
	display: table-row
.cell
	display: table-cell
	vertical-align: middle

.w100
	width: 100%
.w25
	width: 25%
.w20
	width: 20%

.clearfix
	display block
	clear both

.prallax
	position: absolute;
	width: 100%
	top: -200px
	bottom: -150px
	z-index: 1
	background-repeat: no-repeat
	background-position: center
	overflow: hidden
	img
		min-width 150%
		top: -100px
		left: -25%
		bottom: -200px
		width: 100%
		position absolute
		display: none
	&-content
		position: relative
		z-index: 2
.btn
	padding 10px
	vertical-align: middle
	font-size: 14px
	font-weight: bold
	color: white
	text-align center
	display: block
	text-decoration: none
	border: 0
	&:hover
		opacity: .8
	&-red
		background-color: #fd072c
	&-blue
		background-color: #5b7fa6;
	@media (max-width: 768px)
		width: 300px !important
		max-width: 100% !important
		padding-top 8px
		padding-bottom 8px
		height auto
		margin auto
		line-height normal
.h1
	// text-align center
	@media (min-width: 1439px)
		font-size: 48px;
		line-height: 1.4;
	@media (max-width: 1439px)
		font-size: 36px;
		line-height: 1.3;
	@media (max-width: 768px)
		margin-bottom 40px !important
	line-height: 1.0;
	color: #252525;
	font-weight: normal
	&-line
		&:after
			margin-top: 60px
			margin-bottom 60px
			content: ""
			width: 138px;
			display: block
			background: #fd072c
			@media (min-width: 1439px)
				margin-top: 60px
				margin-bottom 60px
				height:  7px;
			@media (max-width: 1439px)
				margin-top: 40px
				height: 3px;
				margin-bottom 40px


.animated {
  -webkit-animation-duration: .8s;
  animation-duration: .8s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;

}

.animated.infinite {
  -webkit-animation-iteration-count: infinite;
  animation-iteration-count: infinite;
}

.animated.hinge {
  -webkit-animation-duration: 2s;
  animation-duration: 2s;
}

.animated.bounceIn,
.animated.bounceOut {
  -webkit-animation-duration: .75s;
  animation-duration: .75s;
}

.animated.flipOutX,
.animated.flipOutY {
  -webkit-animation-duration: .75s;
  animation-duration: .75s;
}
@-webkit-keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

.fadeIn {
  -webkit-animation-name: fadeIn;
  animation-name: fadeIn;
}